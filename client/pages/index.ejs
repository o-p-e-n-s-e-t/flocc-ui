<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://unpkg.com/flocc"></script>
    <script src="/dist/flocc-ui.js"></script>
  </head>
  <body>
    <div id="container" style="width: 300px"></div>
    <script>
      const { Slider, Input } = floccUI;
      new Slider({
        min: -5,
        max: 10,
        step: 0.5,
        value: 0,
        style: {
          border: "1px solid #aaa",
          padding: "20px 60px",
          marginBottom: 20,
          width: 420,
        },
      }).mount("#container");
      new Slider({
        min: -10,
        max: 10,
        step: 0.5,
        value: 0,
        style: { width: 300 },
      }).mount("#container");
      new Input({
        value: "#ebfff0",
      })
        .mount("#container")
        .once((value) => {
          document.body.style["background-color"] = value;
        })
        .onChange((value) => {
          document.body.style["background-color"] = value;
        });
    </script>
  </body>
</html>
